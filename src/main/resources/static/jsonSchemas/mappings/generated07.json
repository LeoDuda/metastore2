{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "example:metadata": {
        "type": "object",
        "properties": {
          "_attributes": {
            "type": "object",
            "properties": {
              "xmlns:example": {
                "type": "string"
              }
            },
            "required": [
              "xmlns:example"
            ]
          },
          "example:title": {
            "type": "object",
            "properties": {
              "_text": {
                "type": "string"
              }
            },
            "required": [
              "_text"
            ]
          }
        },
        "required": [
          "_attributes",
          "example:title"
        ]
      }
    }
  }